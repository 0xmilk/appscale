<!--Body content-->
<div id="content" class="clearfix">
    <div class="contentwrapper"><!--Content wrapper-->

        <div class="heading">

            <h3>AppScale Dashboard</h3>                    

            <div class="resBtnSearch">
                <a href="#"><span class="icon16 icomoon-icon-search-3"></span></a>
            </div>

        </div><!-- End .heading-->

        <!-- Build page from here: -->
        <div class="row-fluid">
          <div class="span4"></div><!--spacing div-->
          <div class="span4">
            <div class="page-header">
                <h1>Upload an application</h1></div><!--close header-->
                  <div class="well">
                    <%= content_tag :h3, display_flash_messages %>
                    <% form_for @app, :url => { :controller => :apps, :action => :upload }, :html => { :multipart => true } do |f| %>
                      <p class="alert">
                        <%= f.label :file_data, "New Applications" %>&nbsp;-&nbsp;
                        Must be a .tar.gz file.&nbsp;<%= link_to "<strong>Help</strong>","#", :onclick => "showHelp();" %>
                      </p>
                      <p>
                        <%= f.file_field :file_data, :accept => GZIP_MIME_TYPES.join(", ") %>
                        <%= image_tag "spinner.gif", { :id => "spinner", :style => "display:none;" } %>
                        <%= display_error_messages(@app, :file_data) %>
                      </p>
                      <p>
                        <%= submit_tag "Upload",  { :class => "btn btn-primary", :id => "upload-button", :onclick => "uploading();"} %>
                      </p>
                    <% end %>
                  <div id="help-text" style="display: none;"><h3>Help</h3>This form allows you to upload applications into AppScale. Valid applications must be tarred and gzipped and have a ".tar.gz" extension. To create this file run <em>"tar -czf app.tar.gz ."</em> in the directory containing the application's app.yaml file.
                  </div>
                  </div>

              </div><!--close well-->
        </div><!--close span6 -->
        <div class="span4"></div> <!--spacing div-->
        </div> <!-- end row fluid -->
    </div> <!-- end content wrapper -->
</div> <!--end content-->




